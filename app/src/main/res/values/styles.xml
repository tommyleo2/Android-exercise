<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="fruit_list_pic">
        <item name="android:layout_width">@dimen/fruit_list_photo_size</item>
        <item name="android:layout_height">@dimen/fruit_list_photo_size</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginLeft">@dimen/fruit_list_padding</item>
        <item name="android:layout_marginRight">@dimen/fruit_list_padding</item>
    </style>

    <style name="fruit_list_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/fruit_list_fruit_name_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">@dimen/fruit_list_padding</item>
        <item name="android:textColor">@color/fruit_list_name_text_color</item>
    </style>
</resources>
